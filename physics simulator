import pygame, pymunk, sys, random

pygame.init()

SCREEN_WIDTH = 600 
SCREEN_HEIGHT = 600 

screen = pygame.display.set_mode((SCREEN_WIDTH, SCREEN_HEIGHT))
clock = pygame.time.Clock()

space = pymunk.Space()
space.gravity = (0, 900)

colors = [(239, 71, 111), (255, 209, 102), (6, 214, 160), (17, 138, 178), (7, 59, 76)]

class Apples: 
    def __init__(self, space, x, y):
        self.space = space 
        self.x = x 
        self.y = y
        self.color = random.choice(colors) 

    """ Creates dynamic apples that fall under gravity"""
    def create_apple(self):
        body = pymunk.Body(5, 100, body_type=pymunk.Body.DYNAMIC)
        body.position = (self.x, self.y)
        shape = pymunk.Circle(body, 0)
        shape.elasticity = 0.6 
        space.add(body, shape)
        shape.color = self.color 
        return shape    

class Box: 
    def __init__(self, space, x, y, width, height): 
        self.space = space 
        self.x = x 
        self.y = y 
        self.width = width 
        self.height = height 
        self.color = random.choice(colors)

    """Create static boxes that function as obstacles"""
    def create_box(self):  
        body = pymunk.Body(body_type=pymunk.Body.STATIC)
        body.position = (self.x, self.y)
        shape = pymunk.Poly.create_box(body, (self.width, self.height))
        shape.elasticity = 0.8 
        space.add(body, shape)
        shape.color = self.color 
        return shape 
    
    def draw(): 
        return None 




running = True 
while running: 
    for event in pygame.event.get(): 
        if event.type == pygame.QUIT: 
            running = False
    
    screen.fill((217, 217, 217)) 
    pygame.display.update()